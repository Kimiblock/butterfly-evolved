.search-dialog
  position: fixed
  top: 10%
  left: 50%
  z-index: 1001
  display: none
  margin-left: -300px
  padding: 20px
  width: 600px
  border-radius: 12px
  background: var(--trans-bg)
  --search-height: 100vh
  border: 1px solid var(--color-border-default)
  //box-shadow: var(--card-box-shadow)


  +maxWidth768()
    top: 0
    left: 0
    margin: 0
    width: 100%
    height: 100%
    border-radius: 0 0 12px 12px

  hr
    margin: 20px auto

  .search-nav
    margin: 0 0 14px
    color: $search-color
    font-size: 1.4em
    line-height: 1

    .search-dialog-title
      float: right
      margin-bottom: 15px

    .search-close-button
      float: left
      color: $grey
      margin-bottom: 15px
      //transition: color .2s ease-in-out

      &:hover
        //color: $search-color

  hr
    margin: 20px auto
    @extend .custom-hr

#search-mask
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 1000
  display: none
  background: alpha($dark-black, .2)
  backdrop-filter: var(--backdrop-filter-darken)
  -webkit-backdrop-filter: var(--backdrop-filter-darken)

if hexo-config('algolia_search.enable')
  @require 'algolia'

if hexo-config('local_search.enable')
  @require 'local-search'
